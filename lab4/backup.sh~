#!/bin/bash

timenow=$(date +"%Y-%m-%d")
secnow=0
lastdate=""
seclast=0
timediff=0

backupfile=(~/Backup*)

if [[ -f "$backupfile" ]]
then
	lastdate=$(find ~ -type f -name 'Backup*' | awk 'BEGIN{FS="/"}{print $NF}' | awk 'BEGIN{FS="-"; OFS="-"}{$1=""; print}' | cut -c 2-)
	seclast=$(date -d "$lastdate" +"%s")
	secnow=$(date -d "$timenow" +"%s")
	timediff=$(echo "($secnow - $seclast) / 60 / 60 / 24" | bc)
	echo "$timediff"
else
	echo "0"
fi
